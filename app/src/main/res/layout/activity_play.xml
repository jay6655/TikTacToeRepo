<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/first_view"
        android:weightSum="3"
        android:background="@drawable/player_bg"
        android:padding="@dimen/_3sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_150sdp">

        <ImageView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:src="@drawable/player_circle"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"/>

        <TextView
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:text="Player 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/x"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_view"
        android:layout_alignParentEnd="true"
        android:weightSum="3"
        android:background="@drawable/computer_bg"
        android:padding="@dimen/_3sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_150sdp">
        <ImageView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:src="@drawable/player_circle"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"/>

        <TextView
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:text="Player 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_weight="1"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:src="@drawable/oo"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:weightSum="3"
        android:layout_below="@+id/first_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:padding="@dimen/_10sdp"
                android:background="@drawable/board"
                android:id="@+id/button_00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:visibility="gone"
                android:id="@+id/text_00"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <ImageView
                android:padding="@dimen/_10sdp"
                android:background="@drawable/board"
                android:id="@+id/button_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:visibility="gone"
                android:id="@+id/text_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <ImageView
                android:background="@drawable/board"
                android:padding="@dimen/_10sdp"
                android:id="@+id/button_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:visibility="gone"
                android:id="@+id/text_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thickness"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:padding="@dimen/_10sdp"
                android:background="@drawable/board"
                android:id="@+id/button_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:visibility="gone"
                android:id="@+id/text_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <ImageView
                android:padding="@dimen/_10sdp"
                android:background="@drawable/board"
                android:id="@+id/button_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
            <Button
                android:visibility="gone"
                android:id="@+id/text_11"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <ImageView
                android:padding="@dimen/_10sdp"
                android:background="@drawable/board"
                android:id="@+id/button_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:visibility="gone"
                android:id="@+id/text_12"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thickness"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

        <ImageView
            android:padding="@dimen/_10sdp"
            android:background="@drawable/board"
            android:id="@+id/button_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
            <Button
                android:visibility="gone"
                android:id="@+id/text_20"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <View
            android:layout_width="@dimen/line_thickness"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <ImageView
            android:padding="@dimen/_10sdp"
            android:background="@drawable/board"
            android:id="@+id/button_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
            <Button
                android:visibility="gone"
                android:id="@+id/text_21"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        <View
            android:layout_width="@dimen/line_thickness"
            android:layout_height="match_parent"
            android:background="@color/lineColor" />

        <ImageView
            android:padding="@dimen/_10sdp"
            android:background="@drawable/board"
            android:id="@+id/button_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

            <Button
                android:visibility="gone"
                android:id="@+id/text_22"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>


    </LinearLayout>
    </LinearLayout>

</RelativeLayout>