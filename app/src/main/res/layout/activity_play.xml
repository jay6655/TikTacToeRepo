<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/first_view"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp"
        android:weightSum="3">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:src="@drawable/circle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/player_1"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:src="@drawable/x" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/computer_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_3sdp"
        android:weightSum="3">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:src="@drawable/circle" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/player_2"
            android:textSize="@dimen/_15sdp" />

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_weight="1"
            android:src="@drawable/oo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp"
        android:layout_below="@+id/first_view"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:weightSum="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_00"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/board"
                android:padding="@dimen/_10sdp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <ImageView
                android:id="@+id/button_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/board"
                android:padding="@dimen/_10sdp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <ImageView
                android:id="@+id/button_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/board"
                android:padding="@dimen/_10sdp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thickness"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/board"
                android:padding="@dimen/_10sdp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <ImageView
                android:id="@+id/button_11"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/board"
                android:padding="@dimen/_10sdp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <ImageView
                android:id="@+id/button_12"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/board"
                android:padding="@dimen/_10sdp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thickness"
            android:background="@color/lineColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/button_20"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/board"
                android:padding="@dimen/_10sdp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <ImageView
                android:id="@+id/button_21"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/board"
                android:padding="@dimen/_10sdp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/lineColor" />

            <ImageView
                android:id="@+id/button_22"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/board"
                android:padding="@dimen/_10sdp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>


    <View
        android:rotation="45"
        android:layout_marginVertical="@dimen/_10sdp"
        android:id="@+id/firstline"
        android:visibility="visible"
        android:layout_below="@+id/first_view"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:background="@drawable/red_done" />

    <View
        android:rotation="315"
        android:id="@+id/secondline"
        android:visibility="invisible"
        android:layout_below="@+id/first_view"
        android:layout_marginStart="@dimen/_25sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:background="@drawable/red_done" />

    <View
        android:id="@+id/thirdline"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        android:layout_below="@+id/first_view"
        android:layout_marginEnd="@dimen/_25sdp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="match_parent"
        android:background="@drawable/red_done" />

</RelativeLayout>